{
  "manifest_version": 3,
  "name": "toreru – Persona Edition",
  "version": "1.4",
  "description": "ネオン×コミック調のタスクボード (期限・詳細付き、改善版)",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon_128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}